<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/muscleSelectionpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/strong_man" />

        <Button
            android:id="@+id/b_shoulder1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="115dp"
            android:layout_marginTop="178dp"
            android:background="@android:color/transparent"
            android:rotation="45" />

        <Button
            android:id="@+id/b_chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/b_chest1"
            android:layout_toEndOf="@+id/b_quads"
            android:background="@android:color/transparent"
            android:text="@string/chest"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/b_chest1"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/b_arms1"
            android:layout_alignEnd="@+id/b_shoulder1"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="66dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_core1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/b_chest1"
            android:layout_below="@+id/b_chest1"
            android:layout_marginStart="21dp"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_arms1"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/b_core1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_arms2"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignBaseline="@+id/b_core1"
            android:layout_alignBottom="@+id/b_core1"
            android:layout_alignEnd="@+id/b_arms1"
            android:background="@android:color/transparent"
            android:rotation="8" />

        <Button
            android:id="@+id/b_arms3"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_above="@+id/b_arms2"
            android:layout_marginEnd="54dp"
            android:layout_toStartOf="@+id/b_shoulder1"
            android:background="@android:color/transparent"
            android:rotation="45" />

        <Button
            android:id="@+id/b_quads"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/b_arms2"
            android:layout_alignStart="@+id/b_chest1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_calves"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_quads"
            android:layout_below="@+id/b_quads"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_shoulder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/b_chest1"
            android:layout_marginEnd="42dp"
            android:layout_toStartOf="@+id/b_arms3"
            android:background="@android:color/transparent"
            android:text="@string/shoulder"
            android:textColor="@android:color/holo_blue_light" />

        <Button
            android:id="@+id/b_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/b_arms1"
            android:layout_alignStart="@+id/b_core1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/b_quads2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/b_core1"
            android:background="@android:color/transparent"
            android:text="@string/quads"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/b_core"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/b_quads"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:text="@string/core"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/b_arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/b_arms1"
            android:layout_toEndOf="@+id/b_chest1"
            android:background="@android:color/transparent"
            android:text="@string/arms"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/b_calves1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_arms2"
            android:layout_below="@+id/b_arms2"
            android:background="@android:color/transparent"
            android:text="@string/calf"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/saveWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/save_green"
            android:elevation="20dp"
            android:text="@string/save"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/b_back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_calves"
            android:layout_toEndOf="@+id/b_back"
            android:background="@android:color/transparent"
            android:tint="@android:color/holo_blue_dark"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

        <TextView
            android:id="@+id/sized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignBottom="@+id/imageView4"
            android:layout_toStartOf="@+id/b_arms"
            android:elevation="5dp"
            android:text="0"
            android:textColor="@color/save_green"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignBottom="@+id/imageView4"
            android:layout_toEndOf="@+id/sized"
            android:text="Exercises" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ex_chooser_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="12dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/workoutCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/aldrich"
                android:text="@string/chooseExercise"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/workoutsChoosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/save_green"
                android:text="@string/save"
                android:textColor="@color/background_color" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/b1">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/pb3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rView"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>