<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/notesCretedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/deleNote"
            android:text="TextView"
            android:textColor="@color/save_green"
            android:textSize="10sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/deleNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:tint="#ff1e00"
            app:srcCompat="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/editNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/deleNote"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/deleNote"
            android:background="@android:color/transparent"
            android:tint="@color/classic_textPrimary"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <TextView
            android:id="@+id/noteDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="casual"
            android:text="TextView"
            android:textSize="8sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <TextView
        android:id="@+id/noteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/bitter"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>