<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lava_theme_y"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ie.ul.o.daysaver.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <LinearLayout
                android:id="@+id/main_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lava_theme_"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/main_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/aldrich"
                    android:textAlignment="textEnd"
                    android:textColor="@color/lava_theme_y"
                    android:textSize="30sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/main_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/aldrich"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:textColor="@color/holo_yellow"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/welcomeTo"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/hBot_main"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="72dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/aldrich"
                        android:maxHeight="20dp"
                        android:maxWidth="300dp"
                        android:paddingRight="40dp"
                        android:text="@string/welcome_guest"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="@color/lava_theme_y"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/hBot_main"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/hbot_wave_lava_sml" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/dayscale"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/main_activity_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fadingEdge="vertical"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
